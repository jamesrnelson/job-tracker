<%= render partial: "form_contact" %>
<% @company.contacts.each do |c| %>
  <p>
    Name: <%= c.name %> | Position: <%= c.position %> | Email: <%= c.email %> <%= link_to "Edit", edit_company_contact_path(@company, c) %> <%= link_to "Delete", company_contact_path(@company, c), method: "delete", data: {confirm: "Are you sure? This will permanently delete this contact."} %><br/>
  </p>
<% end %>
