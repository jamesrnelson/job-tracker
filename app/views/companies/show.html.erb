<div class="container">
  <h1>All Jobs for <strong><%= @company.name %></strong></h1>
  <%= link_to "Create a New Job", new_company_job_path(@company) %>

  <% @company.jobs.each do |job| %>
  <ul><%= link_to job.title, job_path(job) %> at <%= job.company.name %> - <%= link_to "Delete", company_job_path(@company, job), method: "delete" %></ul>
  <% end %>

  <br>
</div>

  <br>

<div class="container">
  Contacts:
  <%= render partial: "form_contact" %>
  <% @company.contacts.each do |c| %>
  <p>
    Name: <%= c.name %> | Position: <%= c.position %> | Email: <%= c.email %> <%= link_to "Edit", edit_company_contact_path(@company, c) %> <%= link_to "Delete", company_contact_path(@company, c), method: "delete" %><br/>
  </p>
  <% end %>
</div>
